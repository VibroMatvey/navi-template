<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Navi\Domain\Entity\POI" table="points_of_interests"
            repository-class="App\Navi\Infrastructure\Repository\POIRepository">
        <id name="ulid" type="string" length="36">
            <generator strategy="NONE"/>
        </id>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime" nullable="true"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersistUlid"/>
            <lifecycle-callback type="prePersist" method="onPrePersist"/>
            <lifecycle-callback type="preUpdate" method="onPreUpdate"/>
        </lifecycle-callbacks>

        <field name="title" length="255"/>
        <field name="naviData" type="json" nullable="true"/>

        <many-to-one field="map" target-entity="App\Navi\Domain\Entity\Map" inversed-by="points">
            <join-column name="map_ulid" referenced-column-name="ulid" on-delete="SET NULL"/>
        </many-to-one>
    </entity>

</doctrine-mapping>